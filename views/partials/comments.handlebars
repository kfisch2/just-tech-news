<div class="comments">
  {{!-- post.comments can't be destructured in a nice way, so we use 'this' to access post.comments --}}
  {{#each this }}
    <section class="comment">
      <div class="meta">
        {{user.username}}
        on
        {{format_date created_at}}
      </div>
      <div class="text">
        {{comment_text}}
      </div>
    </section>
  {{/each}}
</div>